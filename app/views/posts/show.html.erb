<div id="<%= dom_id @post %>">
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <%= @post.body %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @post.user.name %>
  </p>

  <p>
    <strong>Published:</strong>
    <%= @post.published_at.strftime("%m/%d/%Y at %l:%M %p") %>
  </p>

</div>


<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>

  <%= button_to "Destroy this post", @post, method: :delete %>
</div>

<div>
  <h3>Comments</h3>
  <div>
    <%= render 'comments/form', post: @post, comment: Comment.new %>
  </div>
  <p><%= @comments.count %> <%= pluralize(@comments.count, "comment") %></p>
  <%= render @comments %>
</div>
